<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="guru.bug.uconverter.ui.ConverterController">
    <GridPane AnchorPane.topAnchor="10"
              AnchorPane.rightAnchor="10"
              AnchorPane.leftAnchor="10"
              AnchorPane.bottomAnchor="10"
              hgap="10"
              vgap="10">
        <Label text="Source Unit"
               GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.hgrow="SOMETIMES"/>
        <ComboBox fx:id="sourceCombo"
                  GridPane.columnIndex="1" GridPane.rowIndex="0"
                  GridPane.hgrow="ALWAYS"/>
        <Label text="Target Unit"
               GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.hgrow="SOMETIMES"/>
        <ComboBox fx:id="targetCombo"
                  GridPane.columnIndex="3" GridPane.rowIndex="0"
                  GridPane.hgrow="ALWAYS"/>

        <Label text="Source value"
               GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.hgrow="SOMETIMES"/>
        <TextField fx:id="sourceValue"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"
                   GridPane.hgrow="ALWAYS"/>

        <Label text="Target value"
               GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.hgrow="SOMETIMES"/>
        <TextField fx:id="targetValue" editable="false"
                   GridPane.columnIndex="3" GridPane.rowIndex="1"
                   GridPane.hgrow="ALWAYS"/>

        <Button text="Convert" onAction="#convert"
                GridPane.rowIndex="2" GridPane.columnSpan="4" GridPane.halignment="CENTER"/>
    </GridPane>

</AnchorPane>
